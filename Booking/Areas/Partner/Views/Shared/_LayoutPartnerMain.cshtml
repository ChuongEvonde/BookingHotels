<!DOCTYPE html>

<html>
<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Content/main.css" />
    <link rel="stylesheet" href="~/Content/hotel.css" />
    <link rel="stylesheet" href="~/Content/roomDetail.css" />
    <link rel="stylesheet" href="~/Areas/Content/css/main.css" />
    <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="header mb-5">
        <div class="overlay"></div>
        <div class="container navbar py-3">
            <div class="header__logo">
                <a href="~/Home/Index"> <span>Booking Hotels</span></a>
            </div>
            <div class="header__nav d-flex">
                <div class="header__nav-flag">
                    <div class="dropdown rounded">
                       
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item d-flex "
                               href="#">
                                <img src="https://t-cf.bstatic.com/design-assets/assets/v3.85.0/images-flags/Vn@3x.png"
                                     alt=""
                                     class="rounded-circle flag-image mx-2" />
                                <span>Tiếng Việt</span>
                            </a>
                            <a class="dropdown-item d-flex "
                               href="#">
                                <img src="https://t-cf.bstatic.com/design-assets/assets/v3.85.0/images-flags/Us@3x.png"
                                     alt=""
                                     class="rounded-circle  flag-image mx-2" />
                                <span>English</span>
                            </a>
                           
                        </div>
                    </div>
                </div>
                <!-- <div class="header__nav-res ml-5">
                  <button type="button" class="btn btn-light mr-2">Đăng Ký</button>
                  <button type="button" class="btn btn-light">Đăng Nhập</button>
                </div> -->
                <!-- khi co user dang nhap -->

                <div class="header__nav-user ml-3">
                    <div class="btn-group header__nav-user--group">
                        <button type="button" class="btn header__nav-user--dropdown dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="header__nav-user-avatar">
                                <span>T</span>
                            </div>
                            <span class="user-name">Nguyễn Chương</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <button class="dropdown-item btn header__nav-user--item" type="button">
                                <i class='bx bx-home-alt-2'></i>
                                <span>Quản lý Chỗ Nghỉ</span>
                            </button>
                            <button class="dropdown-item btn header__nav-user--item" type="button">
                                <i class='bx bx-add-to-queue'></i>
                                <span>Thêm Chỗ Nghỉ</span>
                            </button>
                            <button class="dropdown-item btn header__nav-user--item" type="button">
                                <i class='bx bx-log-out-circle'></i>
                                <span>Đăng xuất</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5 d-flex flex-column align-content-center">
            <h3 class="header__title">Chào <span class="text-danger">Nguyễn Chương</span> <br /> Đăng chỗ nghỉ của Quý vị trên Booking.com và bắt đầu đón tiếp khách thật nhanh chóng!</h3>
        </div>
       
       
    </header>
    <div>
        @RenderBody()
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="~/Areas/Content/js/main.js"></script>
</body>

</html>
