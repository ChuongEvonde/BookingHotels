@model List<Booking.Models.room>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="container mt-5">
    @foreach (var item in Model)
    {

        <h3 class="font-weight-bold">@item.hotel_name</h3>
        <p>@item.address</p>
        <div class="row roomDetail__list">
            @foreach (var item2 in ViewBag.List_Image)
            {
                <div class="roomDetail__image">
                    <img src="~/Content/Images/@item2.image" />
                </div>
            }

        </div>
        <div class="row roomDetail__content mt-4">
            <div class="col-8">
                <div class="roomDetail__content d-flex flex-column border-bottom mt-4">
                    <h4>@item.room_name</h4>
                    <span class="mb-2">@item.room_type</span>
                </div>
                <p class="roomDetail__content-decs border-bottom">@item.des_room</p>
                <h4>Các Tiện Nghi</h4>
                <div class="roomDetail__amenities">
                    @foreach(var item3 in ViewBag.List_convenient)
                {
                    <div>
                        <i class="@item3.icon"></i>
                        @item3.convenient_name
                    </div>
                }
                    
                </div>
            </div>
            <div class="col-4 d-flex flex-column rounded roomDetail__price mt-3 ">
                <h3 class="mt-3 font-weight-bold text-center">VND @item.price/Đêm</h3>
                <div class="d-flex mt-3  d-flex justify-content-center align-items-center">
                    <div class="roomDetail__checkin d-flex flex-column mr-2 text-center">
                        <label class="font-weight-bold text-sm">Ngày nhận phòng</label>
                        <input type="date" placeholder="Ngày nhận phòng" name="checkin" />
                    </div>
                    <div class="roomDetail__checkout d-flex flex-column text-center">
                        <label class="font-weight-bold text-sm">Ngày trả phòng</label>
                        <input type="date" placeholder="Ngày nhận phòng" name="checkout" />
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4 px-2">
                    <div class="d-flex justify-content-between">
                        <u>
                            <span>VND @item.price</span>
                            <i class='bx bx-x mt-1'></i>
                            <span>5 đêm</span>
                        </u>
                    </div>
                    <div>
                        <span class="text-danger font-weight-bold">VND 2.250.000</span>
                    </div>

                </div>
                <div class="d-flex justify-content-between my-3 px-2">
                    <div class="d-flex justify-content-between">
                        <u>
                            <span>Phí dịch vụ</span>
                        </u>
                    </div>
                    <div>
                        <span class="text-danger font-weight-bold">VND 80.000</span>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-2 px-2 border-top pt-3">
                    <div class="d-flex justify-content-between">
                        <u>
                            <span>Tổng tiền thanh toán</span>
                        </u>
                    </div>
                    <div>
                        <span class="text-danger font-weight-bold">VND 2.330.000</span>
                    </div>
                </div>
                <button class="btn btn-danger w-100 roomDetail__btn">Đặt Phòng Ngay</button>
            </div>
        </div>
    }

