
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<html lang="en">
<head>
    <link rel="stylesheet" href="~/Content/main.css" />
    <title>Document</title> 
</head>
<body>
  
    <!-- MAIN -->
    <main class="m-5">
        <section class="container ">
            <h3 class="roomtype__title section__title">Ưu Đãi</h3>
            <p>Khuyến mãi, giảm giá và ưu đãi đặc biệt dành riêng cho bạn</p>
            <div class="endow">
                <div class="endow__box-letf d-flex">
                    <div class="endow__box-content pt-5 pl-4 mr-5">
                        <h4 class="endow__box-title">Làm việc, thư giãn hay cả hai</h4>
                        <p class="endow__box-des">Khám phá các chỗ nghỉ cho phép lưu trú dài ngày với giá theo tháng tiết kiệm hơn</p>
                        <a href="~/Hotel" class="btn btn-primary">Tìm chỗ nghỉ</a>
                    </div>
                    <div class="endow__box-img">
                        <img src="https://r-xx.bstatic.com/xdata/images/xphoto/500x500/220031205.jpeg?k=bf9841e8ba89dfdf92e02d45e45dc89fcca2d981b7c74ad57d3ecf6ba64ba1c2&o=" alt="">
                    </div>
                </div>
                <div class="endow__box-right">
                    <img src="https://r-xx.bstatic.com/xdata/images/xphoto/714x300/261387541.jpeg?k=80d1571cedd0a363b9d9b78207914af9b1490c6a859cacd8dc090c866d1bbc94&o=" alt="">
                    <div class="endow__box-right--des">
                        <h4>Tiết kiệm 15% với Ưu Đãi Cuối Năm</h4>
                        <p>
                            Khám phá hàng nghìn điểm đến khắp thế giới và tiết kiệm từ 15%
                            Tìm Ưu Đãi Cuối Năm
                        </p>
                        <button type="button" class="btn btn-primary">Khám phá chỗ nghỉ</button>
                    </div>

                </div>
            </div>
            
        </section>
        <section class="container  popular">
            <h3 class="explore__title section__title">Điểm đến đang thịnh hành</h3>
            <p>Các lựa chọn phổ biến nhất cho du khách</p>
            <div class="popular__grid">
                <div class="popular__grid-box">
                    @foreach (var item in ViewBag.dsCity)
                    {

                        <form action="@Url.Action("Index", "Hotel", new { city = item.city_name })" method="get" class="popular__grid-item">
                            <button type="submit" name="cityName" value="@item.city_name">
                                <img src="~/Content/Images/@item.avatar_city" />
                                <div class="popular__grid-des">
                                    <h3>@item.city_name</h3>
                                    <img src="~/Content/Images/lag.png" alt="">
                                </div>
                            </button>
                        </form>
                    }
                </div>


            </div>
        </section>
        <section class="container  explore">
            <h3 class="explore__title section__title">Khám Phá Việt Nam</h3>
            <p class="explore__des">Các điểm đến phổ biến này có nhiều điều chờ đón bạn</p>
            <div class="explore__silde">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                        <form action="@Url.Action("Index", "Hotel", new { city = item.city_name })" method="get" class="swiper-slide explore__silde-box">
                            <button type="submit" name="cityName" value="@item.city_name">
                                <img src="~/Content/Images/@item.avatar_city" alt="" class="swiper-slide-img">
                                <h4 class="explore__slide-title">@item.city_name</h4>
                                <span class="explore__silde-des">1020 chỗ nghỉ</span>
                            </button>
                        </form>

                        }

                    </div>

                    <div class="explore__btn swiper-button-next"></div>
                    <div class="explore__btn swiper-button-prev"></div>
                </div>
            </div>
        </section>
        <section class="container  roomtype">
            <h3 class="roomtype__title section__title">Tìm theo loại chỗ nghỉ</h3>
            <div class="roomtype__silde ">
                <div class="swiper1">
                    <div class="swiper-wrapper">
                        @foreach (var item in ViewBag.dsHotelType)
                        {
                        <form action="@Url.Action("IndexByHotelType", "Hotel", new { HotelType = item.hotel_type1 })" method="get" class="swiper-slide roomtype__box">
                            <button type="submit" name="IDHotelType" value="@item.id">
                                <img src="~/Content/Images/@item.avatar_hotel_type" alt="" class="swiper-slide-img">
                                <h4 class="roomtype__slide-title">@item.hotel_type1</h4>
                            </button>
                        </form>
                            
                        }
                        

                    </div>

                <div class="roomtple__btn-next swiper-button-next "></div>
                <div class="roomtple__btn-prev swiper-button-prev"></div>
            </div>
            </div>
        </section>

        <section class="container">
            <div class=""></div>
        </section>
    </main>
        
    <!-- FOOTER -->
    
    <script src="~/Content/main.js"></script>
</body>

</html>
