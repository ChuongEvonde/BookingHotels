
@{
    ViewBag.Title = "Checkin";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container">
    
    <form class="mt-4" action="~/Hotel/SaveCheckin" method="post">
        <div class="row">
            <div class="col-6">
                <h4>
                    Nhập thông tin chi tiết của bạn
                </h4>
                <div>
                    <div class="form-group  checkin">
                        <label for="name">Họ và Tên</label>
                        <input type="password" class="form-control" id="name" placeholder="Nhập họ và tên">
                    </div>
                    <div class="form-group checkin">
                        <label for="email">Địa Chỉ Email</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Nhập địa chỉ email">
                        <small id="emailHelp" class="form-text text-muted">
                            Email xác nhận đặt phòng sẽ được gửi đến địa chỉ này
                        </small>
                    </div>
                    <div class="form-group checkin">
                        <label for="phone">Số Điện Thoại</label>
                        <input type="password" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                    </div>
                    <button type="submit" class="btn btn-primary">Xác Nhận Đặt Phòng</button>
                </div>
            </div>
            <div class="col-6">
                <div class=" d-flex flex-column rounded roomDetail__price mt-3 ">
                    <div class="checkin_comform">
                        <img src="~/Content/Images/danang.jpg" />
                        <div class="checkin_comform--content">
                            <h5>The Land Hotel & Apartment</h5>
                            <p>Phòng Superior Giường Đơn</p>
                            <p>
                                2 Giường đơn lớn
                            </p>
                        </div>
                    </div>
                    <h3 class="mt-3 font-weight-bold text-center">VND 120000/Đêm</h3>
                    <div class="d-flex mt-3  d-flex justify-content-center align-items-center">
                        <div class="roomDetail__checkin d-flex flex-column mr-2 text-center">
                            <label class="font-weight-bold text-sm">Ngày nhận phòng</label>
                            <input type="date" placeholder="Ngày nhận phòng" name="checkin" />
                        </div>
                        <div class="roomDetail__checkout d-flex flex-column text-center">
                            <label class="font-weight-bold text-sm">Ngày trả phòng</label>
                            <input type="date" placeholder="Ngày nhận phòng" name="checkout" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-4 px-2">
                        <div class="d-flex justify-content-between">
                            <u>
                                <span>VND 12000</span>
                                <i class='bx bx-x mt-1'></i>
                                <span>5 đêm</span>
                            </u>
                        </div>
                        <div>
                            <span class="text-danger font-weight-bold">VND 2.250.000</span>
                        </div>

                    </div>
                    <div class="d-flex justify-content-between my-3 px-2">
                        <div class="d-flex justify-content-between">
                            <u>
                                <span>Phí dịch vụ</span>
                            </u>
                        </div>
                        <div>
                            <span class="text-danger font-weight-bold">VND 80.000</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2 px-2 border-top pt-3">
                        <div class="d-flex justify-content-between">
                            <u>
                                <span>Tổng tiền thanh toán</span>
                            </u>
                        </div>
                        <div>
                            <span class="text-danger font-weight-bold">VND 2.330.000</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
